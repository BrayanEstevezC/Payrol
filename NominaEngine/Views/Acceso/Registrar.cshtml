@model NominaEngine.Models.Entities.Usuarios

@{
    Layout = null;
}

<form asp-controller="Acceso" asp-action="Registrar" method="post">

    <input class="form-control mb-3" type="text" placeholder="Nombre Completo" asp-for="Nombre" />
    <input class="form-control mb-3" type="text" placeholder="Correo" required asp-for="Correo" />
    <input class="form-control mb-3" type="password" placeholder="Contraseña" required asp-for="Clave" />
    <div class="d-grid gap-2 mb-3">
        <button class="btn btn-primary" type="submit">Registrate</button>
    </div>
    @if (ViewData["Mensaje"] != null)
    {

        <div class="form-group">
            <div class="alert alert-danger" role="alert">
                @ViewData["Mensaje"]
            </div>
        </div>
    }
    ¿Ya tienes una cuenta? <a href="@Url.Action("IniciarSesion","Inicio")"> Iniciar Sesion</a>

</form>